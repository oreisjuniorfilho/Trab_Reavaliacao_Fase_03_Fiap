<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    <!--@Html.DisplayNameFor(model => model.Lancamento)-->                    
                    <label>Data da Publicação</label>
                </th>
                <th>
                    <!--@Html.DisplayNameFor(model => model.Genero)-->
